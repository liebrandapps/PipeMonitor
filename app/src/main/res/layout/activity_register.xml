<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.liebrand.pipemonitor.RegisterActivity">

    <TextView
        android:id="@+id/lbldescstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Select Host &amp; Press 'Start' to begin"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rbtngroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbldescstart"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rbtnhost1"

            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <RadioButton
            android:id="@+id/rbtnhost2"
            android:layout_below="@id/rbtnhost1"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RadioGroup>


    <Button
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbtngroup"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnStart" />

    <TextView
        android:id="@+id/regstep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStart"
        android:text="1. Contact 'Tail' instance"/>

    <TextView
        android:id="@+id/statusstep1"
        android:layout_toEndOf="@id/regstep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/regstep1"
        android:layout_below="@id/btnStart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="-"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/lblheadinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regstep1"
        android:text=""/>


    <TextView
        android:id="@+id/regstep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblheadinfo"
        android:text="2. Contact 'Head' instance"/>

    <TextView
        android:id="@+id/statusstep2"
        android:layout_toEndOf="@id/regstep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/regstep2"
        android:layout_below="@id/lblheadinfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="-"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/regstep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regstep2"
        android:text="3. Registration Complete"/>

    <TextView
        android:id="@+id/statusstep3"
        android:layout_toEndOf="@id/regstep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/regstep2"
        android:layout_below="@id/regstep2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="-"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/valserverinfo1"
        android:layout_marginTop="15pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regstep3"
        android:text=""/>

    <TextView
        android:id="@+id/valserverinfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valserverinfo1"
        android:text=""/>

    <TextView
        android:id="@+id/valserverinfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valserverinfo2"
        android:text=""/>

    <TextView
        android:id="@+id/valserverinfo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valserverinfo3"
        android:text=""/>




</RelativeLayout>
